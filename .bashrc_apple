alias rm_apple="sudo rm -r ~/Applications ~/Desktop ~/Documents ~/Movies ~/Music ~/Pictures ~/Public"
alias ls="ls -G"
alias nvlc="vlc -I curses"
alias shutdown="osascript -e 'tell application \"Finder\" to shut down'"
alias lockscreen='/System/Library/CoreServices/"Menu Extras"/User.menu/Contents/Resources/CGSession -suspend'
alias mac_turn_startup_sound_off="sudo nvram SystemAudioVolume=%80"
